---
// Elegant minimal header inspired by editorial design
import { getCurrentSeason } from '../utils/season';

const currentDate = new Date();
const monthYear = currentDate.toLocaleDateString('en-US', { month: 'long', year: 'numeric' });
const season = getCurrentSeason();
---

<!-- Fixed Navigation -->
<div class="nav-left">
  <a href="/">Index</a>
  <a href="/archive">Archive</a>
  <a href="/tags/reality-checks">Tags</a>
  <a href="/zero-to-ship">Zero to Ship</a>
</div>
<div class="nav-right">
  <a href="/about">About</a>
  <a href="/subscribe">Subscribe</a>
</div>

<!-- Static Header -->
<header class="site-header">
  <a href="/" class="logo-box">
    <div class="logo-line">VIBE CODE</div>
    <div class="logo-line">MOONLIGHTER</div>
  </a>
</header>

<style>
  /* Fixed Navigation */
  .nav-left {
    position: fixed;
    top: var(--space-8);
    left: var(--space-8);
    z-index: 100;
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
    align-items: flex-start;
  }

  .nav-right {
    position: fixed;
    top: var(--space-8);
    right: var(--space-8);
    z-index: 100;
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
    align-items: flex-end;
  }

  .nav-left a,
  .nav-right a {
    font-family: var(--font-sans-geometric);
    font-size: 0.65rem;
    font-weight: var(--font-weight-bold);
    color: var(--color-text-primary);
    text-transform: uppercase;
    letter-spacing: 0.3em;
    transition: var(--transition-normal);
  }

  .nav-left a:hover,
  .nav-right a:hover {
    color: var(--color-accent);
    text-decoration: none;
  }

  /* Static Header */
  .site-header {
    position: fixed;
    top: 0;
    left: 50%;
    transform: translateX(-50%);
    z-index: 100;
  }

  .logo-box {
    display: block;
    background: var(--color-text-primary);
    color: var(--color-neutral-0);
    padding: var(--space-5) var(--space-4);
    text-decoration: none;
    transition: all var(--transition-normal);
    text-align: center;
  }

  .logo-line {
    font-family: var(--font-sans-geometric);
    font-size: 0.5rem;
    font-weight: 900;
    letter-spacing: 0.8em;
    line-height: 1.8;
    white-space: nowrap;
    text-align: center;
    padding-left: 0.8em; /* Compensate for letter-spacing on the right */
  }

  .logo-box:hover {
    background: var(--color-neutral-80);
    transform: translateY(-1px);
  }

  /* Mobile */
  @media (max-width: 768px) {
    .nav-left {
      left: var(--space-4);
      top: var(--space-4);
    }

    .nav-right {
      right: var(--space-4);
      top: var(--space-4);
    }

    .nav-left,
    .nav-right {
      gap: var(--space-2);
    }

    .nav-left a,
    .nav-right a {
      font-size: 0.6rem;
    }
  }
</style>