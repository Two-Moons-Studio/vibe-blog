---
export interface Props {
  title: string;
  subtitle?: string;
  label?: string;
  align?: 'center' | 'left';
  variant?: 'standard' | 'hero' | 'minimal';
  showBorder?: boolean;
}

const { 
  title, 
  subtitle,
  label,
  align = 'center',
  variant = 'standard',
  showBorder = false 
} = Astro.props;
---

<header class={`page-header ${align} ${variant} ${showBorder ? 'bordered' : ''}`}>
  {label && (
    <span class="page-label">{label}</span>
  )}
  <h1 class="page-title">{title}</h1>
  {subtitle && (
    <p class="page-subtitle">{subtitle}</p>
  )}
</header>

<style>
  .page-header {
    padding: calc(var(--space-10) + var(--space-8)) var(--page-padding) var(--space-6);
    margin-bottom: var(--space-8);
  }

  .page-header.center {
    text-align: center;
  }

  .page-header.left {
    text-align: left;
  }

  .page-header.bordered {
    border-bottom: 1px solid var(--color-neutral-20);
  }

  .page-label {
    display: block;
    font-family: var(--font-sans-geometric);
    font-size: 0.6rem;
    font-weight: var(--font-weight-bold);
    text-transform: uppercase;
    letter-spacing: 0.3em;
    color: var(--color-accent);
    line-height: var(--line-height-normal);
    margin-bottom: var(--space-4);
  }

  .page-title {
    font-family: var(--font-serif-display);
    font-size: var(--font-size-3xl);
    font-weight: var(--font-weight-semibold);
    line-height: var(--line-height-tight);
    margin: 0 0 var(--space-4);
    color: var(--color-text-primary);
  }

  .page-subtitle {
    font-family: var(--font-serif-body);
    font-size: var(--font-size-large);
    line-height: var(--line-height-relaxed);
    color: var(--color-text-secondary);
    margin: 0 auto;
    max-width: 500px;
  }

  /* Hero variant for landing pages */
  .page-header.hero {
    padding: calc(var(--space-10) + var(--space-8)) 0 var(--space-8);
    max-width: 640px;
    margin: 0 auto var(--space-10);
    position: relative;
  }

  .page-header.hero .page-title {
    font-size: clamp(2.25rem, 6vw, 3.75rem);
    line-height: 1;
    letter-spacing: -0.03em;
  }

  /* Minimal variant */
  .page-header.minimal {
    padding: calc(var(--space-10) + var(--space-8)) 0 var(--space-5);
    margin-bottom: var(--space-5);
  }

  /* Compact variant for tag pages */
  .page-header.compact {
    padding-top: calc(var(--space-10) + var(--space-8));
    padding-bottom: var(--space-6);
  }

  /* Special styling for post count or meta info */
  :global(.page-header .post-count) {
    font-family: var(--font-sans-geometric);
    font-size: 0.75rem;
    font-weight: var(--font-weight-medium);
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: var(--color-text-secondary);
    margin-top: var(--space-2);
  }

  @media (max-width: 768px) {
    .page-header {
      padding: calc(var(--space-8) + var(--space-6)) var(--page-padding) var(--space-5);
    }

    .page-header.hero {
      padding: calc(var(--space-8) + var(--space-6)) 0 var(--space-6);
    }

    .page-header.minimal {
      padding: calc(var(--space-8) + var(--space-6)) 0 var(--space-5);
    }

    .page-title {
      font-size: var(--font-size-large);
    }

    .page-subtitle {
      font-size: var(--font-size-small);
    }

    .page-header.hero .page-title {
      font-size: clamp(1.75rem, 5vw, 2.5rem);
    }
  }
</style>