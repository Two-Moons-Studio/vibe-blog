---
export interface Props {
  title: string;
  subtitle?: string;
  label?: string;
  align?: 'center' | 'left';
  variant?: 'standard' | 'hero' | 'minimal';
  showBorder?: boolean;
}

const { 
  title, 
  subtitle,
  label,
  align = 'center',
  variant = 'standard',
  showBorder = false 
} = Astro.props;
---

<header class={`page-header ${align} ${variant} ${showBorder ? 'bordered' : ''}`}>
  {label && (
    <span class="page-label" set:html={label}></span>
  )}
  <h1 class="page-title">{title}</h1>
  {subtitle && (
    <p class="page-subtitle">{subtitle}</p>
  )}
</header>

<style>
  .page-header {
    padding: calc(var(--space-10) + var(--space-8)) var(--page-padding) var(--space-6);
    margin-bottom: var(--space-8);
  }

  .page-header.center {
    text-align: center;
  }

  .page-header.left {
    text-align: left;
  }

  .page-header.bordered {
    border-bottom: 1px solid var(--color-neutral-20);
  }

  .page-label {
    display: block;
    font-family: var(--font-sans-geometric);
    font-size: 0.57rem;
    font-weight: var(--font-weight-bold);
    text-transform: uppercase;
    letter-spacing: 0.3em;
    color: var(--color-accent);
    line-height: var(--line-height-normal);
    margin-bottom: var(--space-4);
  }

  .page-title {
    font-family: var(--font-serif-display);
    font-size: var(--font-size-3xl);
    font-weight: var(--font-weight-semibold);
    line-height: var(--line-height-tight);
    margin: 0 0 var(--space-4);
    color: var(--color-text-primary);
  }

  .page-subtitle {
    font-family: var(--font-serif-body);
    font-size: var(--font-size-large);
    font-style: italic;
    line-height: var(--line-height-relaxed);
    color: var(--color-text-secondary);
    margin: 0 auto;
    max-width: 450px;
  }

  /* Hero variant for landing pages */
  .page-header.hero {
    padding: calc(var(--space-10) + var(--space-8)) 0 var(--space-8);
    max-width: 576px;
    margin: 0 auto var(--space-10);
    position: relative;
  }

  .page-header.hero .page-title {
    font-size: clamp(2.137rem, 6vw, 3.562rem);
    line-height: 1;
    letter-spacing: -0.03em;
  }

  /* Minimal variant */
  .page-header.minimal {
    padding: calc(var(--space-10) + var(--space-8)) 0 var(--space-5);
    margin-bottom: var(--space-5);
  }

  /* Compact variant for tag pages */
  .page-header.compact {
    padding-top: calc(var(--space-10) + var(--space-8));
    padding-bottom: var(--space-6);
  }

  /* Special styling for post count or meta info */
  :global(.page-header .post-count) {
    font-family: var(--font-sans-geometric);
    font-size: 0.712rem;
    font-weight: var(--font-weight-medium);
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: var(--color-text-secondary);
    margin-top: var(--space-2);
  }

  @media (max-width: 768px) {
    .page-header {
      padding: calc(var(--space-8) + var(--space-6)) var(--page-padding) var(--space-5);
    }

    .page-header.hero {
      padding: calc(var(--space-8) + var(--space-6)) 0 var(--space-6);
    }

    .page-header.minimal {
      padding: calc(var(--space-8) + var(--space-6)) 0 var(--space-5);
    }

    .page-title {
      font-size: var(--font-size-large);
    }

    .page-subtitle {
      font-size: var(--font-size-small);
    }

    .page-header.hero .page-title {
      font-size: clamp(1.662rem, 5vw, 2.375rem);
    }
  }

  /* ===== MOBILE-ONLY HEADER ENHANCEMENTS ===== */
  /* Better typography and spacing for mobile */
  @media (max-width: 480px) {
    .page-header {
      /* Add just 20-30px more padding to top */
      padding: calc(var(--space-10) + var(--space-4)) var(--page-padding) var(--space-4);
    }

    .page-header.hero {
      /* Less top padding for hero variant */
      padding: calc(var(--space-10) + var(--space-4)) var(--space-3) var(--space-5);
    }

    .page-header.standard {
      /* Standard variant with moderate extra top padding */
      padding-top: calc(var(--space-10) + var(--space-4));
    }

    /* Reduce header sizes from ~48px to ~38px */
    .page-title {
      font-size: 2.375rem; /* ~38px instead of 48px */
      line-height: 1.2;
    }

    /* Larger subtitle for readability */
    .page-subtitle {
      font-size: var(--font-size-base);
      max-width: 90%; /* Slightly narrower on mobile */
      margin: 0 auto;
      line-height: 1.4; /* Slightly tighter line height for mobile */
    }

    /* Hero title also reduced */
    .page-header.hero .page-title {
      font-size: 2.375rem; /* ~38px, matching other headers */
    }

    /* Label size adjustment */
    .page-label {
      font-size: 0.625rem; /* Slightly larger on mobile */
    }
  }

  @media (max-width: 375px) {
    .page-header.hero {
      padding: calc(var(--space-6) + var(--space-5)) var(--space-2) var(--space-5);
    }
  }
</style>