---
export interface Props {
  title: string;
  subtitle?: string;
  label?: string;
  align?: 'center' | 'left';
  showBorder?: boolean;
}

const { 
  title, 
  subtitle,
  label,
  align = 'center',
  showBorder = true 
} = Astro.props;
---

<header class={`page-header ${align} ${showBorder ? 'bordered' : ''}`}>
  {label && (
    <span class="page-label">{label}</span>
  )}
  <h1 class="page-title">{title}</h1>
  {subtitle && (
    <p class="page-subtitle">{subtitle}</p>
  )}
</header>

<style>
  .page-header {
    padding: calc(var(--space-10) + var(--space-8)) var(--page-padding) var(--space-8);
    margin-bottom: var(--space-8);
  }

  .page-header.center {
    text-align: center;
  }

  .page-header.left {
    text-align: left;
  }

  .page-header.bordered {
    border-bottom: 1px solid var(--color-neutral-20);
  }

  .page-label {
    display: block;
    font-family: var(--font-sans-geometric);
    font-size: 0.7rem;
    font-weight: var(--font-weight-semibold);
    text-transform: uppercase;
    letter-spacing: 0.2em;
    color: var(--color-accent);
    margin-bottom: var(--space-3);
  }

  .page-title {
    font-family: var(--font-serif-display);
    font-size: var(--font-size-3xl);
    font-weight: var(--font-weight-semibold);
    line-height: var(--line-height-tight);
    margin: 0 0 var(--space-3);
    color: var(--color-text-primary);
  }

  .page-subtitle {
    font-family: var(--font-serif-body);
    font-size: var(--font-size-large);
    line-height: var(--line-height-relaxed);
    color: var(--color-text-secondary);
    margin: 0;
  }

  /* Compact variant for tag pages */
  .page-header.compact {
    padding-top: calc(var(--space-10) + var(--space-8));
    padding-bottom: var(--space-8);
  }

  /* Special styling for post count or meta info */
  :global(.page-header .post-count) {
    font-family: var(--font-sans-geometric);
    font-size: 0.75rem;
    font-weight: var(--font-weight-medium);
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: var(--color-text-secondary);
    margin-top: var(--space-2);
  }

  @media (max-width: 768px) {
    .page-title {
      font-size: var(--font-size-xlarge);
    }

    .page-subtitle {
      font-size: var(--font-size-base);
    }
  }
</style>