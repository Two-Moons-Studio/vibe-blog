---
import Layout from '../../layouts/Layout.astro';
import Tag from '../../components/Tag.astro';
import { getCollection, type CollectionEntry } from 'astro:content';

export async function getStaticPaths() {
  const posts = await getCollection('posts');
  return posts
    .filter(post => !post.data.draft)
    .map((post) => ({
      params: { slug: post.slug },
      props: { post },
    }));
}

type Props = {
  post: CollectionEntry<'posts'>;
};

const { post } = Astro.props;
const { Content } = await post.render();

const formatDate = (date: Date) => {
  return date.toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
};
---

<Layout title={post.data.title} description={post.data.excerpt}>
  <article class="post-article">
    <header class="post-hero">
      <time class="post-date" datetime={post.data.date.toISOString()}>
        {formatDate(post.data.date).toUpperCase()}
      </time>
      
      <h1 class="post-title">{post.data.title}</h1>
      
      {post.data.excerpt && (
        <p class="post-excerpt">{post.data.excerpt}</p>
      )}
      
      {post.data.tags && post.data.tags.length > 0 && (
        <div class="post-tags">
          {post.data.tags.map(tag => (
            <Tag tag={tag} size="small" />
          ))}
        </div>
      )}
    </header>

    <div class="post-container">
      <div class="post-content prose">
        <Content />
      </div>
    </div>

    <footer class="post-footer">
      <div class="footer-divider"></div>
      <nav class="post-nav">
        <a href="/archive" class="nav-link">
          <span class="nav-arrow">‚Üê</span>
          <span class="nav-text">All Posts</span>
        </a>
        <a href="/subscribe" class="subscribe-link">
          <span class="subscribe-text">Get Updates</span>
        </a>
      </nav>
    </footer>
  </article>
</Layout>

<style>
  .post-article {
    padding: calc(var(--space-10) + var(--space-8)) 0 var(--space-10);
  }

  /* Hero Section */
  .post-hero {
    text-align: center;
    padding: var(--space-8) var(--page-padding) var(--space-10);
    max-width: 860px;
    margin: 0 auto;
  }

  .post-date {
    display: block;
    font-family: var(--font-sans-geometric);
    font-size: 0.7rem;
    font-weight: var(--font-weight-semibold);
    text-transform: uppercase;
    letter-spacing: 0.2em;
    color: var(--color-accent);
    margin-bottom: var(--space-5);
  }

  .post-tags {
    display: flex;
    justify-content: center;
    gap: var(--space-2);
    margin-top: var(--space-8);
  }

  .post-tags :global(.tag) {
    font-size: 0.55rem !important;
    padding: 2px 8px !important;
  }


  .post-title {
    font-family: var(--font-serif-display);
    font-size: var(--font-size-4xl);
    font-weight: var(--font-weight-semibold);
    line-height: var(--line-height-tight);
    letter-spacing: var(--letter-spacing-tight);
    margin: 0 0 var(--space-5);
    color: var(--color-text-primary);
  }

  .post-excerpt {
    font-family: var(--font-serif-body);
    font-size: var(--font-size-large);
    font-weight: var(--font-weight-normal);
    line-height: var(--line-height-relaxed);
    color: var(--color-text-secondary);
    max-width: 600px;
    margin: 0 auto;
  }

  /* Content Container */
  .post-container {
    max-width: var(--content-max-width);
    margin: 0 auto;
    padding: 0 var(--page-padding);
  }

  /* Prose Content Styles */
  .prose {
    font-family: var(--font-serif-body);
    font-size: var(--font-size-large);
    line-height: var(--line-height-relaxed);
    color: var(--color-text-primary);
  }

  .prose h2 {
    font-family: var(--font-serif-display);
    font-size: var(--font-size-2xl);
    font-weight: var(--font-weight-medium);
    line-height: var(--line-height-tight);
    letter-spacing: var(--letter-spacing-tight);
    margin: var(--space-8) 0 var(--space-4);
    color: var(--color-text-primary);
  }

  .prose h3 {
    font-family: var(--font-serif-display);
    font-size: var(--font-size-xlarge);
    font-weight: var(--font-weight-medium);
    line-height: var(--line-height-normal);
    margin: var(--space-6) 0 var(--space-3);
    color: var(--color-text-primary);
  }

  .prose p {
    margin-bottom: var(--space-5);
  }

  .prose strong {
    font-weight: var(--font-weight-semibold);
    color: var(--color-text-primary);
  }

  .prose em {
    font-style: italic;
  }

  .prose ul,
  .prose ol {
    margin: var(--space-5) 0;
    padding-left: var(--space-6);
  }

  .prose li {
    margin-bottom: var(--space-2);
  }

  .prose blockquote {
    border-left: 3px solid var(--color-accent);
    padding-left: var(--space-5);
    margin: var(--space-6) 0;
    font-style: italic;
    color: var(--color-text-secondary);
  }

  .prose hr {
    border: none;
    border-top: 1px solid var(--color-border);
    margin: var(--space-8) 0;
  }

  .prose a {
    color: var(--color-text-primary);
    text-decoration: underline;
    text-decoration-color: var(--color-accent);
    text-underline-offset: 0.2em;
    transition: var(--transition-normal);
  }

  .prose a:hover {
    color: var(--color-accent);
  }

  /* Footer */
  .post-footer {
    max-width: var(--content-max-width);
    margin: var(--space-10) auto 0;
    padding: 0 var(--page-padding);
  }

  .footer-divider {
    height: 1px;
    background: var(--color-border);
    margin-bottom: var(--space-6);
  }

  .post-nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .nav-link {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    color: var(--color-text-secondary);
    text-decoration: none;
    transition: var(--transition-normal);
  }

  .nav-link:hover {
    color: var(--color-text-primary);
  }

  .nav-arrow {
    font-size: var(--font-size-large);
  }

  .nav-text {
    font-family: var(--font-sans-geometric);
    font-size: 0.7rem;
    font-weight: var(--font-weight-medium);
    text-transform: uppercase;
    letter-spacing: 0.15em;
  }

  .subscribe-link {
    background: var(--color-accent);
    color: white;
    padding: var(--space-3) var(--space-5);
    border-radius: 8px;
    text-decoration: none;
    transition: var(--transition-normal);
  }

  .subscribe-link:hover {
    opacity: 0.85;
  }

  .subscribe-text {
    font-family: var(--font-sans-geometric);
    font-size: 0.7rem;
    font-weight: var(--font-weight-semibold);
    text-transform: uppercase;
    letter-spacing: 0.15em;
  }

  /* Mobile */
  @media (max-width: 768px) {
    .post-hero {
      padding: var(--space-6) var(--page-padding) var(--space-8);
    }

    .post-title {
      font-size: var(--font-size-2xl);
    }

    .post-excerpt {
      font-size: var(--font-size-base);
    }

    .prose {
      font-size: var(--font-size-base);
    }

    .post-nav {
      flex-direction: column;
      gap: var(--space-4);
    }
  }
</style>