---
import Layout from '../layouts/Layout.astro';
import Tag from '../components/Tag.astro';

// Sample data for demo
const postData = {
  date: new Date('2025-08-25'),
  title: 'The Three Hour Semicolon',
  excerpt: 'A missing semicolon, a broken build, and a lesson in humility.',
  tags: ['Reality Checks', 'Getting Unstuck']
};

const formatDate = (date: Date) => {
  return date.toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
};
---

<Layout title="Tag Placement Options - Vibe Code Moonlighter">
  <div class="demo-container">
    <header class="demo-header">
      <h1>Tag Placement Options</h1>
      <p>Click each option to see how it looks:</p>
    </header>

    <div class="options-grid">
      <!-- Option 1: Current (with date) -->
      <div class="option-card" data-option="1">
        <h3>Option 1: Current (inline with date)</h3>
        <article class="post-hero-demo">
          <div class="meta-inline">
            <time>{formatDate(postData.date).toUpperCase()}</time>
            <Tag tag={postData.tags[0]} size="small" />
            <Tag tag={postData.tags[1]} size="small" />
          </div>
          <h1 class="post-title">{postData.title}</h1>
          <p class="post-excerpt">{postData.excerpt}</p>
        </article>
      </div>

      <!-- Option 2: Below excerpt -->
      <div class="option-card" data-option="2">
        <h3>Option 2: Below excerpt</h3>
        <article class="post-hero-demo">
          <time class="time-solo">{formatDate(postData.date).toUpperCase()}</time>
          <h1 class="post-title">{postData.title}</h1>
          <p class="post-excerpt">{postData.excerpt}</p>
          <div class="tags-below">
            <Tag tag={postData.tags[0]} size="small" />
            <Tag tag={postData.tags[1]} size="small" />
          </div>
        </article>
      </div>

      <!-- Option 3: Between title and excerpt -->
      <div class="option-card" data-option="3">
        <h3>Option 3: Between title & excerpt</h3>
        <article class="post-hero-demo">
          <time class="time-solo">{formatDate(postData.date).toUpperCase()}</time>
          <h1 class="post-title">{postData.title}</h1>
          <div class="tags-middle">
            <Tag tag={postData.tags[0]} size="small" />
            <Tag tag={postData.tags[1]} size="small" />
          </div>
          <p class="post-excerpt">{postData.excerpt}</p>
        </article>
      </div>

      <!-- Option 4: Subtle with separator -->
      <div class="option-card" data-option="4">
        <h3>Option 4: Subtle inline (with separator)</h3>
        <article class="post-hero-demo">
          <div class="meta-subtle">
            <time>{formatDate(postData.date).toUpperCase()}</time>
            <span class="separator">·</span>
            <span class="tag-text">{postData.tags[0]}</span>
            <span class="separator">·</span>
            <span class="tag-text">{postData.tags[1]}</span>
          </div>
          <h1 class="post-title">{postData.title}</h1>
          <p class="post-excerpt">{postData.excerpt}</p>
        </article>
      </div>

      <!-- Option 5: No tags in header -->
      <div class="option-card" data-option="5">
        <h3>Option 5: No tags (clean header)</h3>
        <article class="post-hero-demo">
          <time class="time-solo">{formatDate(postData.date).toUpperCase()}</time>
          <h1 class="post-title">{postData.title}</h1>
          <p class="post-excerpt">{postData.excerpt}</p>
        </article>
        <div class="footer-note">→ Tags would appear at article end</div>
      </div>

      <!-- Option 6: Sidebar style -->
      <div class="option-card wide" data-option="6">
        <h3>Option 6: Editorial sidebar</h3>
        <article class="post-hero-editorial">
          <div class="sidebar-tags">
            <Tag tag={postData.tags[0]} size="small" />
            <Tag tag={postData.tags[1]} size="small" />
          </div>
          <div class="main-content">
            <time class="time-solo">{formatDate(postData.date).toUpperCase()}</time>
            <h1 class="post-title">{postData.title}</h1>
            <p class="post-excerpt">{postData.excerpt}</p>
          </div>
        </article>
      </div>
    </div>

    <div class="nav-back">
      <a href="/">← Back to homepage</a>
    </div>
  </div>
</Layout>

<style>
  .demo-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: var(--space-8) var(--page-padding);
  }

  .demo-header {
    text-align: center;
    margin-bottom: var(--space-8);
  }

  .demo-header h1 {
    font-family: var(--font-serif-display);
    font-size: var(--font-size-3xl);
    margin-bottom: var(--space-3);
  }

  .demo-header p {
    font-family: var(--font-serif-body);
    font-size: var(--font-size-large);
    color: var(--color-text-secondary);
  }

  .options-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
    gap: var(--space-6);
    margin-bottom: var(--space-10);
  }

  .option-card {
    border: 1px solid var(--color-border);
    border-radius: 8px;
    padding: var(--space-5);
    transition: all var(--transition-normal);
  }

  .option-card.wide {
    grid-column: 1 / -1;
  }

  .option-card:hover {
    border-color: var(--color-accent);
    transform: translateY(-2px);
  }

  .option-card h3 {
    font-family: var(--font-sans-geometric);
    font-size: 0.75rem;
    font-weight: var(--font-weight-bold);
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: var(--color-accent);
    margin-bottom: var(--space-4);
  }

  /* Demo article styles */
  .post-hero-demo {
    text-align: center;
    padding: var(--space-4) 0;
  }

  .post-title {
    font-family: var(--font-serif-display);
    font-size: var(--font-size-2xl);
    font-weight: var(--font-weight-semibold);
    line-height: var(--line-height-tight);
    margin: var(--space-3) 0;
    color: var(--color-text-primary);
  }

  .post-excerpt {
    font-family: var(--font-serif-body);
    font-size: var(--font-size-large);
    line-height: var(--line-height-relaxed);
    color: var(--color-text-secondary);
    margin: 0;
  }

  time, .time-solo {
    display: block;
    font-family: var(--font-sans-geometric);
    font-size: 0.7rem;
    font-weight: var(--font-weight-semibold);
    text-transform: uppercase;
    letter-spacing: 0.2em;
    color: var(--color-accent);
  }

  /* Option 1: Inline with date */
  .meta-inline {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: var(--space-3);
    margin-bottom: var(--space-3);
  }

  /* Option 2: Below excerpt */
  .tags-below {
    display: flex;
    justify-content: center;
    gap: var(--space-2);
    margin-top: var(--space-4);
  }

  /* Option 3: Middle position */
  .tags-middle {
    display: flex;
    justify-content: center;
    gap: var(--space-2);
    margin: var(--space-3) 0;
  }

  /* Option 4: Subtle inline */
  .meta-subtle {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: var(--space-2);
    margin-bottom: var(--space-3);
  }

  .separator {
    color: var(--color-text-secondary);
    font-size: 0.8rem;
  }

  .tag-text {
    font-family: var(--font-sans-geometric);
    font-size: 0.65rem;
    font-weight: var(--font-weight-medium);
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: var(--color-text-secondary);
  }

  /* Option 5: Clean */
  .footer-note {
    text-align: center;
    font-family: var(--font-sans-geometric);
    font-size: 0.65rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-text-secondary);
    margin-top: var(--space-4);
    padding-top: var(--space-4);
    border-top: 1px solid var(--color-border);
  }

  /* Option 6: Editorial */
  .post-hero-editorial {
    display: grid;
    grid-template-columns: 150px 1fr;
    gap: var(--space-6);
    text-align: left;
  }

  .sidebar-tags {
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
    padding-top: var(--space-8);
  }

  .main-content {
    text-align: center;
  }

  .nav-back {
    text-align: center;
    padding-top: var(--space-6);
    border-top: 1px solid var(--color-border);
  }

  .nav-back a {
    font-family: var(--font-sans-geometric);
    font-size: 0.75rem;
    font-weight: var(--font-weight-semibold);
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: var(--color-text-primary);
    text-decoration: none;
  }

  .nav-back a:hover {
    color: var(--color-accent);
  }

  @media (max-width: 768px) {
    .options-grid {
      grid-template-columns: 1fr;
    }

    .post-hero-editorial {
      grid-template-columns: 1fr;
    }

    .sidebar-tags {
      flex-direction: row;
      justify-content: center;
      padding-top: 0;
      margin-bottom: var(--space-3);
    }
  }
</style>