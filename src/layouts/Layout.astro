---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { getSeasonalColor, getCurrentSeason } from '../utils/season';

export interface Props {
  title: string;
  description?: string;
  ogImage?: string;
}

const { 
  title, 
  description = "Vibe Code Moonlighter - Designer by day, coder by night. Building in the moonlight hours.",
  ogImage = "/og-image.png"
} = Astro.props;
const seasonalColor = getSeasonalColor();
const currentSeason = getCurrentSeason();
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<!DOCTYPE html>
<html lang="en" data-season={currentSeason}>
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="canonical" href={canonicalURL} />
    <title>{title}</title>
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(ogImage, Astro.site)} />
    <meta property="og:site_name" content="Vibe Code Moonlighter" />
    
    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={canonicalURL} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={new URL(ogImage, Astro.site)} />
    
    <!-- Additional SEO -->
    <meta name="author" content="Vibe Code Moonlighter" />
    <meta name="robots" content="index, follow" />
    
    <!-- Dynamic seasonal color -->
    <style define:vars={{ seasonalColor }}>
      :root {
        --color-accent: var(--seasonalColor);
      }
    </style>
  </head>
  <body>
    <div class="page-frame">
      <Header />
      <main>
        <slot />
      </main>
      <Footer />
    </div>
  </body>
</html>

<style is:global>
  @import '../styles/tokens.css';
  @import '../styles/global.css';
  @import '../styles/utilities.css';
</style>

<style>
  .page-frame {
    min-height: 100vh;
    border: 10px solid var(--color-border);
    margin: 0;
    padding: var(--space-4);
    background: var(--color-bg-page);
  }
</style>